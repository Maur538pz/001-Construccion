---
import FisrtCard from "./FisrtCard.astro";
---

<header class="contenedor">
    <figure class="figure-cont">
        <img src="./images/residential-house-process-building 3.png" class="img-fond">
    </figure>
    <figure class="logo"><img src="./images/Logo.png" alt=""></figure>
    <h1 class="eslogan">Tu hogar perdura en el tiempo y abraza tu historia con cada uno de sus detalles</h1>
    <FisrtCard />
</header>


<style>
.contenedor{
    
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.figure-cont{
    position: relative;
}
.img-fond{
    position: fixed;
    left: 0px;
    width: 100%;
    height: 80vh;
    object-fit: cover;
    z-index: 0;
    /*clip-path: polygon(0 0, 100% 0, 100% 80%, 50% 100%, 0% 80%);*/
    filter:brightness(70%)
    
}
.logo{
    position: relative;
    display:flex;
    justify-content: center;
    color: aliceblue;
    padding: 32px;
}
.eslogan{
    position: relative;
    width: 80%;
    font-size: 60px;
    text-align: center;
    color: #F0F6FA;
}

.text{
    font-size: 100px;
}

@media screen and (width <=450px){
    .eslogan{
        font-size: 40px;
        font-weight: 600;
        line-height: 40px;
    }
}

@media screen and (width <=360px){
    .eslogan{
        font-size: 32px;
        font-weight: 600;
        line-height: 40px;
    }
}

@media screen and (width <=320px){
    .img-fond{
    clip-path:none;
    filter:brightness(70%)
    
}
}
@media screen and (width <=360px){
    .logo{
        scale: 0.8;
    }
}

</style>