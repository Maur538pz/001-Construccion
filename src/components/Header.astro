<figure class="figure-cont">
    <div class="img_2">
    </div>
</figure>
<header class="contenedor">
    <figure class="logo"><img src="./icons/logohead.svg" alt="Logo empresa"></figure>
    <h1 class="eslogan">Tu hogar perdura en el tiempo y abraza tu historia con cada uno de sus detalles</h1>
</header>


<style>

.contenedor{
    position: sticky;
    inset: 0px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    
}
.img_2{
    width: 100%;
    height: 100%;
    background: url('./images/fondo-fixed.webp');
    background-size:  cover ;
    background-position: top;
    background-repeat: no-repeat;
    box-sizing: border-box;
    
}
.figure-cont{
    top: 0px;
    position: fixed;
    width: 100%;
    height: 100%;
}
.img-fond{
    display: none;
    left: 0px;
    width: 100%;
    height: 100%;
    object-fit: cover;
    background: linear-gradient(180deg, rgba(172, 178, 181, 0.33) -14.95%, rgba(18, 29, 35, 0.80) 89.27%);
    background-blend-mode: multiply;
}
.logo{
    position: relative;
    left: 0px;
    display:flex;
    justify-content: center;
    color: aliceblue;
    padding: 32px;
    z-index: 5;
}
.eslogan{
    position: relative;
    left: 0px;
    width: clamp(320px,90%,1200px);
    font-size: 60px;
    text-align: center;
    color: #F0F6FA;
    text-shadow: 0px 4px 6px rgba(0, 0, 0, 0.24), 0px var(--spacing-01, 2px) 4px rgba(0, 0, 0, 0.08);
    z-index: 6;
}

.text{
    font-size: 100px;
}
@media screen and (width <1280px){
    .eslogan{
        width: 85%;
    }
}

@media screen and (width <=450px){
    .eslogan{
        font-size: 40px;
        font-weight: 600;
        line-height: 40px;
    }
}

@media screen and (width <=360px){
    .eslogan{
        font-size: 32px;
        font-weight: 600;
        line-height: 40px;
    }
}

@media screen and (width <=320px){
    .img-fond{
    clip-path:none;
    filter:brightness(70%)
    
}
}
@media screen and (width <=360px){
    .logo{
        scale: 0.8;
    }
}

</style>